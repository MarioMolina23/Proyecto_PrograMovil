<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioSesion"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@color/cardview_dark_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/bt_iniciar_sesion"
            android:layout_width="265dp"
            android:layout_height="52dp"
            android:layout_marginTop="60dp"
            android:text="@string/bt_iniciar_sesion"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inicio_contrasena"
            app:rippleColor="#2B1717" />

        <TextView
            android:id="@+id/tv_no_tienes_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="115dp"
            android:layout_marginBottom="80dp"
            android:text="@string/tv_no_tienes_cuenta"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_iniciar_sesion" />

        <Button
            android:id="@+id/bt_registrate"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="80dp"
            android:background="@color/cardview_shadow_end_color"
            android:fontFamily="sans-serif-black"
            android:text="@string/bt_registrate"
            android:textColor="@color/colorDos"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_no_tienes_cuenta"
            app:layout_constraintTop_toBottomOf="@+id/bt_iniciar_sesion"
            tools:text="@string/bt_registrate" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="279dp"
            android:layout_height="520dp"
            android:layout_marginBottom="240dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/bustation" />

        <TextView
            android:id="@+id/tv_inicio_Sesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="285dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/tv_inicio_sesionMayuscula"
            android:textColor="@color/white"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/inicio_correo"
            android:layout_width="310dp"
            android:layout_height="47dp"
            android:layout_marginTop="25dp"
            android:background="@color/colorDos"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:inputType="textEmailAddress"
            android:text="@string/ph_correo"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_inicio_Sesion" />

        <EditText
            android:id="@+id/inicio_contrasena"
            android:layout_width="309dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorDos"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:inputType="textEmailAddress"
            android:text="@string/ph_contrasena"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inicio_correo" />

        <ImageView
            android:id="@+id/ic_user_correo"
            android:layout_width="53dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@+id/inicio_correo"
            app:layout_constraintEnd_toEndOf="@+id/inicio_correo"
            app:layout_constraintTop_toTopOf="@+id/inicio_correo"
            app:srcCompat="@drawable/ic_user" />

        <ImageView
            android:id="@+id/ic_pass"
            android:layout_width="52dp"
            android:layout_height="44dp"
            app:layout_constraintBottom_toBottomOf="@+id/inicio_contrasena"
            app:layout_constraintEnd_toEndOf="@+id/inicio_contrasena"
            app:layout_constraintTop_toTopOf="@+id/inicio_contrasena"
            app:srcCompat="@drawable/ic_candado" />

        <EditText
            android:id="@+id/linea"
            android:layout_width="269dp"
            android:layout_height="3dp"
            android:layout_marginTop="25dp"
            android:background="@color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_no_tienes_cuenta" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>