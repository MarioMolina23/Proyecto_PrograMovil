<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AcercaDe">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00426E"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

    </LinearLayout>

    <TextView
        android:id="@+id/tv_terminos_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="125dp"
        android:background="#00426E"
        android:text="@string/tv_terminos_titulo"
        android:textColor="#FFDD00"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_historia_titulo"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/bt_historia"
        android:layout_width="155dp"
        android:layout_height="143dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:background="#00426E"
        app:layout_constraintBottom_toTopOf="@+id/bt_equipo"
        app:layout_constraintEnd_toStartOf="@+id/tv_historia_titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bus_images" />

    <TextView
        android:id="@+id/tv_historia_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="125dp"
        android:text="@string/tv_historia_titulo"
        android:textColor="#FFDD00"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_equipo_titulo"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/bt_terminos"
        android:layout_width="155dp"
        android:layout_height="143dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:background="#00426E"
        app:layout_constraintBottom_toTopOf="@+id/bt_historia"
        app:layout_constraintEnd_toStartOf="@+id/tv_terminos_titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bus_images" />

    <TextView
        android:id="@+id/tv_equipo_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="110dp"
        android:text="@string/tv_equipo_titulo"
        android:textColor="#FFDD00"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_bustation"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageButton
        android:id="@+id/bt_equipo"
        android:layout_width="155dp"
        android:layout_height="143dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="70dp"
        android:background="#00426E"
        app:layout_constraintBottom_toTopOf="@+id/tv_bustation"
        app:layout_constraintEnd_toStartOf="@+id/tv_equipo_titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bus_images" />

    <TextView
        android:id="@+id/tv_bustation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="casual"
        android:text="@string/tv_titulo_inicio"
        android:textColor="#FFDD00"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/divider3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="15dp"
        android:background="#41000000"
        android:backgroundTint="#FFFFFF"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>